<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context="com.example.nathaniel.cs449_app.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <EditText
        android:id="@+id/starting_val"
        android:layout_width="147dp"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@android:color/background_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="216dp"
        android:layout_height="42dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:text="@string/title_menu"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/starting_desc"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:isScrollContainer="true"
        android:text="@string/starting_desc_string"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starting_val"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/result_val_view"
        android:layout_width="133dp"
        android:layout_height="43dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="98dp"
        android:autoText="false"
        android:text="@string/result_val"
        android:textAlignment="center"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starting_val" />

    <Spinner
        android:id="@+id/starting_val_spinner"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/starting_val"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Spinner
        android:id="@+id/result_val_spinner"
        android:layout_width="129dp"
        android:layout_height="43dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintLeft_toRightOf="@+id/result_val_view"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="206dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/convert_button"
        android:layout_width="124dp"
        android:layout_height="72dp"
        android:text="@string/convert_string"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="450dp" />

    <Button
        android:id="@+id/prev_convert_button"
        android:layout_width="123dp"
        android:layout_height="72dp"
        android:text="@string/prev_convert_string"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="450dp" />

</android.support.constraint.ConstraintLayout>

